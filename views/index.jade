script
  $(document).ready(function() {
    LinesOfCodeGraph().init();
    $("#pairing-metrics-tab").parent().css("background", "#66ccff")
    $("#graphs-tab").click(function() {
      $("#pairing-metrics-tab").parent().css("background", "#efefef");
      $(this).parent().css("background", "#66ccff");
     $("#graphs").show();
     $("#pairing-metrics").hide();
    });

    $("#pairing-metrics-tab").click(function() {
      $("#graphs-tab").parent().css("background", "#efefef")
      $(this).parent().css("background", "#66ccff");
     $("#graphs").hide();
     $("#pairing-metrics").show();
    });

    $.getJSON('/git/people', function(data) {
      var people = "<ul class='menu'>";
      $.each(data, function(key, person) {
          people += "<li><a id='person-" + person +  "' href='#'>" + person + "</a></li>";
          $("#person-" + person).live('click', function() {
            $("[id*='person']").parent().css("background", "#efefef")
            $(this).parent().css("background", "#66ccff");

            $.getJSON('/git/pairs/' + person, function(data) {
              var pairCount = {}, pairs = "";
              $.each(data, function(key, val) {
                pairs += key + " ";
                $.each(val, function(person, numberOfCommits) {
                  console.log("key: " + person + " val:" + numberOfCommits);
                  pairs += person + " ";
                  if(!pairCount[person]) {
                    pairCount[person] = { timesPaired : 0, numberOfCommits : 0 };
                  }
                  pairCount[person]["timesPaired"] += 1;
                  pairCount[person]["numberOfCommits"] += numberOfCommits;
                });
                pairs += "<br />";              		
              });
              
              var maxPairCount = 1;
              $.each(pairCount, function(person, options) {
                if(options.timesPaired > maxPairCount) {
                   maxPairCount = options.timesPaired;
                }
              });

              var timesPaired = "", stats = "<table><tr><th>Person</th><th>Times Paired</th><th>Number of Commits</th><th>Commits per pairing</th></tr>";
              var totalTimesPaired = 0, totalCommits = 0;

              function addRow(values) {
                var row = "<tr>";
                $.each(values, function(_, value) {

                  row += "<td align='center'>" + value + "</td>";
                });
                row += "</tr>";
                return row;
              }

              $.each(pairCount, function(person, options) {
                totalTimesPaired += options.timesPaired;
                totalCommits += options.numberOfCommits;
                var fontSize = (options.timesPaired / maxPairCount) * 100;                
                timesPaired += "<span style='font-size:" + fontSize + "px; padding:4px;'>" + person + "</span> ";     
    
                stats += addRow([person, options.timesPaired, options.numberOfCommits, (options.numberOfCommits/options.timesPaired).toFixed(2)]);
              });

              stats += addRow(["Total", totalTimesPaired, totalCommits, (totalCommits/totalTimesPaired).toFixed(2)])
  
              timesPaired += "<br style='clear:both' />", stats += "</table>";				
              $("#timespaired").html(timesPaired);
              $("#whotheypairedwith").html(stats);
            });

          });
      });
      people += "</ul>"
      $("#pairs").html(people);
    });

  });

