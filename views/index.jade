h2(align="center") Project Dashboard
script
  $(document).ready(function() {
    LinesOfCodeGraph().init();


    $.getJSON('/git/people', function(data) {
      var people = "";
      $.each(data, function(key, person) {
          people += "<a id='person-" + person +  "' href='#'>" + person + "</a> ";
          $("#person-" + person).live('click', function() {
            $.getJSON('/git/pairs/' + person, function(data) {
              var pairCount = {};
              var pairs = "<h2>" + person + "</h2>";
              $.each(data, function(key, val) {
                pairs += key + " ";
                $.each(val, function(innerKey, innerVal) {
                  pairs += innerVal + " ";
                  if(!pairCount[innerVal]) {
                    pairCount[innerVal] = 0;
                  }
                  pairCount[innerVal] += 1;
                });
                pairs += "<br />";              		
              });
              $("#whotheypairedwith").html(pairs);
              console.log(pairCount);
            });
          });
      });
      $("#pairs").html(people);
    });

  });

